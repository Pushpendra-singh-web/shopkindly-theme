<div class="item title" data-role="collapsible">
  <a class="label" style="cursor: pointer;" data-toggle="trigger" href="#bundleprod-<?= $_option->getId() ?>">
      <span><?= $block->escapeHtml($_option->getTitle()) ?></span>
